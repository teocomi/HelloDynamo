<UserControl x:Class="HelloDynamo.HelloNodeModel.Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelloDynamo.HelloNodeModel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
  <Grid>
    <Slider Width="100" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1" Value="{Binding SliderValue}"/>
  </Grid>
</UserControl>
